#include <iostream>

using namespace std;

int main() {
  //Here n is any number whose factorial we want.
  int n ;

  int factorial  = 1;

  cout<<"Enter any number : "<<endl;

  cin>>n;

  // show error if n is negative

  if (n < 0) {

    cout << "Error!";

  }

  // if n is non-negative

  else {

    for (int i = 2; i <= n; i++) {
    // factorial*=i means factorial= factorial*i
      factorial *= i;

    }

    cout << "Factorial of " << n << " = " << factorial;

  }

  return 0;

}
